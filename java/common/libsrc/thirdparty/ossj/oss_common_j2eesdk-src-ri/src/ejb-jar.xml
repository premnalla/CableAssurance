<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">
<ejb-jar>
  <display-name>OSS Common RI</display-name>
  <enterprise-beans>
    <message-driven>
      <display-name>XVTMessageDrivenBean</display-name>
      <ejb-name>XVTMessageDrivenBean</ejb-name>
      <ejb-class>ossj.common.ex.XVTMessageDrivenBean</ejb-class>
      <transaction-type>Container</transaction-type>
      <message-driven-destination>
        <destination-type>javax.jms.Queue</destination-type>
      </message-driven-destination>
      <env-entry>
        <env-entry-name>applicationDN</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>System/System1/ApplicationType/Common/Application/1-3;1-3;ReferenceImplementation/</env-entry-value>
      </env-entry>
      <ejb-ref>
        <ejb-ref-name>ejb/JVTActivationBean</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>ossj.common.ex.JVTActivationHome</home>
        <remote>ossj.common.ex.JVTActivationSession</remote>
      </ejb-ref>
    </message-driven>
    <session>
      <ejb-name>JVTActivationBean</ejb-name>
      <home>ossj.common.ex.JVTActivationHome</home>
      <remote>ossj.common.ex.JVTActivationSession</remote>
      <ejb-class>ossj.common.ex.JVTActivationBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <env-entry>
        <env-entry-name>ApplicationDN</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>System/System1/ApplicationType/Common/Application/1-3;1-3;ReferenceImplementation/</env-entry-value>
      </env-entry>
      <env-entry>
        <env-entry-name>loggingEnabled</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>true</env-entry-value>
      </env-entry>
      <env-entry>
        <env-entry-name>URL</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>"iiop://127.0.0.1:3700"</env-entry-value>
      </env-entry>
      <env-entry>
        <env-entry-name>factoryClass</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>com.sun.jndi.cosnaming.CNCtxFactory</env-entry-value>
      </env-entry>
      <ejb-ref>
        <description>Is responsible for sending out all JMS Events</description>
        <ejb-ref-name>ejb/JmsSender</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <home>ossj.common.ex.JmsSenderHome</home>
        <remote>ossj.common.ex.JmsSender</remote>
      </ejb-ref>
    </session>
    <session>
      <ejb-name>JmsSender</ejb-name>
      <home>ossj.common.ex.JmsSenderHome</home>
      <remote>ossj.common.ex.JmsSender</remote>
      <ejb-class>ossj.common.ex.JmsSenderBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <env-entry>
        <env-entry-name>ApplicationDN</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>System/System1/ApplicationType/Common/Application/1-3;1-3;ReferenceImplementation/</env-entry-value>
      </env-entry>
      <env-entry>
        <env-entry-name>loggingEnabled</env-entry-name>
        <env-entry-type>java.lang.Boolean</env-entry-type>
        <env-entry-value>true</env-entry-value>
      </env-entry>
      <env-entry>
        <env-entry-name>URL</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>"iiop://127.0.0.1:3700"</env-entry-value>
      </env-entry>
      <env-entry>
        <env-entry-name>factoryClass</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>com.sun.jndi.cosnaming.CNCtxFactory</env-entry-value>
      </env-entry>
      <resource-ref>
        <res-ref-name>jms/TopicFactory</res-ref-name>
        <res-type>javax.jms.TopicConnectionFactory</res-type>
        <res-auth>Container</res-auth>
      </resource-ref>
      <resource-env-ref>
        <resource-env-ref-name>jms/EventTopic</resource-env-ref-name>
        <resource-env-ref-type>javax.jms.Topic</resource-env-ref-type>
      </resource-env-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>JVTActivationBean</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>JmsSender</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>XVTMessageDrivenBean</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>NotSupported</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
  <ejb-client-jar>tckclient.jar</ejb-client-jar>
</ejb-jar>
