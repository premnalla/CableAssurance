<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>
<ejb-jar>
  <enterprise-beans>
    <session>
      <ejb-name>JVTPerformanceMonitorSessionBean</ejb-name>
      <home>javax.oss.pm.measurement.JVTPerformanceMonitorHome</home>
      <remote>javax.oss.pm.measurement.JVTPerformanceMonitorSession</remote>
      <ejb-class>ossj.qos.ri.pm.measurement.adapter.JVTPerformanceMonitorSessionImpl</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
	<ejb-name>JVTPerformanceMonitorSessionBean</ejb-name>
	<method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
